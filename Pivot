 select 'Number of recipies' as 'Number of recipies'  , [Main course] , [Vegetable] , [Starch] , [Hors d'oeuvres] ,  [Dessert]
 from 
 (
 select r.RecipeTitle , rc.RecipeClassDescription from Recipes r
join 
Recipe_Classes rc on 
r.RecipeClassID = rc.RecipeClassID
 )
 as sourcetable 
 pivot 
 (
 count(RecipeTitle) for RecipeClassDescription in ([Main course] , [Vegetable] , [Starch] , [Hors d'oeuvres] ,  [Dessert])
 )as pivottable 
